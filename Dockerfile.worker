FROM python:3.12-slim
RUN apt-get update && apt-get install -y --no-install-recommends git ca-certificates openssh-client curl && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY requirements-worker.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt
COPY worker /app/worker
CMD ["python", "-u", "worker/main.py"]
